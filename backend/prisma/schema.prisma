// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  avatar    String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  emails Email[]
}

model Email {
  id              String      @id @default(cuid())
  userId          String
  recipientEmail  String
  subject         String
  body            String
  scheduledFor    DateTime
  sentAt          DateTime?
  status          EmailStatus @default(SCHEDULED)
  errorMessage    String?
  senderEmail     String?
  jobId           String?     @unique
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([scheduledFor])
  @@index([jobId])
}

enum EmailStatus {
  SCHEDULED
  PROCESSING
  SENT
  FAILED
  RATE_LIMITED
}

model RateLimit {
  id           String   @id @default(cuid())
  senderEmail  String
  hourWindow   DateTime // Truncated to hour
  emailCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([senderEmail, hourWindow])
  @@index([senderEmail, hourWindow])
}

